{
  "name": "statistico-analytics",
  "version": "1.0.0",
  "description": "Statistical Analytics Hub - Guided workflows for statistical analysis",
  "main": "src/hub/index.html",
  "type": "module",
  "scripts": {
    "start": "npm run serve",
    "serve": "live-server src/hub --port=8080 --open",
    "build": "npm run build:shared && npm run build:modules && npm run build:hub",
    "build:shared": "echo 'Building shared components...' && node build/build-shared.js",
    "build:modules": "echo 'Building modules...' && node build/build-modules.js",
    "build:hub": "echo 'Building hub...' && node build/build-hub.js",
    "lint": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.css",
    "lint:fix": "eslint src/**/*.js --fix && stylelint src/**/*.css --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "docs": "jsdoc -c jsdoc.json",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/statistico-analytics.git"
  },
  "keywords": [
    "statistics",
    "analytics",
    "data-analysis",
    "regression",
    "correlation",
    "anova",
    "factor-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.0",
    "live-server": "^1.2.2",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "highcharts": "^10.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/shared/js/**/*.js",
      "!src/shared/js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
